<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/48b261be9e.js" crossorigin="anonymous"></script>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}

    {% endblock %}
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="first-navbar">
        <a class="navbar-brand" href="{{ path('homepage_action') }}">SnowTricks</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('homepage_action') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/#tricks">Tricks</a>
            </li>
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('new_trick') }}">Nouveau Trick</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('my_account') }}">Mon compte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">DÃ©connexion</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_login') }}">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('registration') }}">Inscription</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    <nav>
        <div class="navbar navbar-expand navbar-light bg-dark py-0" id="navbar-footer">
            {% if app.user %}
                <a class="navbar-nav d-block d-md-none text-center col-3 menu-icon" href="{{ path('homepage_action') }}">
                    <i class="fas fa-home"></i></a>
                <a class="navbar-nav d-block d-md-none text-center col-3 menu-icon" href="{{ path('new_trick') }}">
                    <i class="fas fa-bookmark"></i></a>
                <a class="navbar-nav d-block d-md-none text-center col-3 menu-icon" href="{{ path('logout') }}">
                    <i class="fas fa-sign-out-alt"></i></a>
            {% else %}
                <a class="navbar-nav d-block d-md-none text-center col-4 menu-icon" href="{{ path('homepage_action') }}">
                    <i class="fas fa-home"></i></a>
                <a class="navbar-nav d-block d-md-none text-center col-4 menu-icon" href="/#tricks">
                    <i class="fas fa-bookmark"></i></a>
                <a class="navbar-nav d-block d-md-none text-center col-4 menu-icon" href="{{ path('security_login') }}">
                    <i class="fas fa-sign-in-alt"></i></a>
            {% endif %}
        </div>
    </nav>

</header>
<body>
    {% block body %}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <footer class="container-fluid d-flex justify-content-center align-items-center"">
        <span>Copyright @ 2020</span>
    </footer>
</body>
</html>
