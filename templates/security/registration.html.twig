{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'} }) }}
        {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Adresse email...' }}) }}
        {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe' }}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation', 'attr': {'placeholder': 'Confirmation' }}) }}
    {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}
{% endblock %}
