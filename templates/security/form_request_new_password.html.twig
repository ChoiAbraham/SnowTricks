{% extends 'base.html.twig' %}

{% block title %}Ask For New Password{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app.request.password') }}
{% endblock %}

{% block body %}
    {{ include('include/_flash.message.html.twig') }}
    <div class="container">
        <div class="disconnect-form">
            <h1 class="hide-block media-title-two mt-4">Mot de passe oublié</h1>

            {{ form_start(form) }}
            <div class="border-form">
                <h1 class="media-title mb-4">Mot de passe oublié</h1>

                <div class="form-group">
                    {{ form_row(form.pseudo, {'label': 'Username', 'attr': {'placeholder': 'Username' }}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Email' }}) }}
                </div>
                <div class="d-flex flex-column align-items-center">
                    <button type="submit" class="btn btn-success re-button">Envoyer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
