{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="pt-5" style="text-align: center">Connexion</h1>
        {{ include('include/_flash.message.html.twig') }}
        <div class="row justify-content-center text-center mt-5">
            <div class="col-sm-10 col-md-8 col-lg-6 border border-dark rounded">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form method="post" class="">
                    <div class="form-group">
                        <label for="inputMail" class="sr-only">Mail</label>
                        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control mt-4"
                               placeholder="Mail" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control mt-4"
                               placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg btn-primary mb-2 p-0" type="submit">
                            Connexion
                        </button>
                    </div>
                    <div class="d-flex">
                        <div class="">
                            <input class="" id="ckb1" type="checkbox" name="remember">
                            <label class="" for="ckb1">
                                Se Souvenir de moi
                            </label>
                        </div>

                        <div>
                            <a href="" class="">
                                Mot de passe oubli√©
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
